<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textSpecialty"
            android:layout_width="179dp"
            android:layout_height="27dp"
            android:text="@string/gym_location_text_view"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#4CAF50"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSpecialty">

            <Spinner
                android:id="@+id/spinnerLocationTrainer"
                android:layout_width="300dp"
                android:layout_height="24dp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="123dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#4CAF50"
            app:layout_constraintBottom_toTopOf="@+id/nextButtonGym"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

            <Spinner
                android:id="@+id/spinnerGym"
                android:layout_width="300dp"
                android:layout_height="24dp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="428dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/nextButtonGym"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            app:srcCompat="@drawable/nextbtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>