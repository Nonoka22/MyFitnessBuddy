<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textSpecialty"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:text="@string/location_text_view"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/traineeCitySpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/traineeCitySpinner"
            android:layout_width="300dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/nextButtonLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSpecialty" />

        <ImageView
            android:id="@+id/nextButtonLocation"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/traineeCitySpinner"
            app:srcCompat="@drawable/nextbtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>