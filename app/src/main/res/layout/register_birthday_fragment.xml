<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nameFieldDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/select_birth_date_TV"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/fieldRegisterDateOfBirth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prevButtonBirthday" />

        <TextView
            android:id="@+id/fieldRegisterDateOfBirth"
            android:layout_width="322dp"
            android:layout_height="47dp"
            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:gravity="center"
            android:text="2020/1/1"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/errorRegisterDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameFieldDescription" />

        <ImageView
            android:id="@+id/nextButtonBirthday"
            android:layout_width="143dp"
            android:layout_height="112dp"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorRegisterDate"
            app:srcCompat="@drawable/nextbtn" />

        <TextView
            android:id="@+id/errorRegisterDate"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center"
            android:text="Error message."
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/nextButtonBirthday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldRegisterDateOfBirth" />

        <ImageView
            android:id="@+id/prevButtonBirthday"
            android:layout_width="63dp"
            android:layout_height="48dp"
            android:alpha="0.8"
            app:layout_constraintBottom_toTopOf="@+id/nameFieldDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/prevbutton" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>